{
    "compilerOptions": {
        "target": "es2016", 
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": false,
        "noImplicitAny": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true, 
        "sourceMap": false
      },
      "include": ["src/**/*", "tests/**/*"],
      "exclude": ["node_modules", "**/*.spec.ts"]
}